{
    "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "ignore": [
            "packages/remix-app/public",
            "packages/remix-app/build",
            "packages/backend/dist"
        ],
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "ignore": [
            "packages/remix-app/public",
            "packages/remix-app/build",
            "packages/backend/dist"
        ],
        "indentStyle": "space",
        "indentWidth": 4
    }
}
